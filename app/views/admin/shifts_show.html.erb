<h4 class="text-center mt-4">Viser vagter for: <%= @worker.name %> </h1>
  <hr>
  <% if @worker.shifts.any? %>
  <table class="table table-dark table-bordered align-middle">
    <% @worker.shifts.each do |w| %>
    <% if w.check_out_time == nil %>
    <thead>
      <tr class="table-danger">
        <th scope="col" style="color:black;" class="text-center">ID# <%= w.id %></th>
        <th scope="col" style="color:black;" class="text-center">NAVN</th>
        <th scope="col" style="color:black;" class="text-center">IND_DAG</th>
        <th scope="col" style="color:black;" class="text-center">IND_DATO</th>
        <th scope="col" style="color:black;" class="text-center">IND_TID</th>
        <th scope="col" style="color:black;" class="text-center">UD_DAG</th>
        <th scope="col" style="color:black;" class="text-center">UD_DATO</th>
        <th scope="col" style="color:black;" class="text-center">UD_TID</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-danger">
        <th scope="row" style="color:black;" class="text-center">1</th>
        <td style="color:black;" class="text-center"><%= w.worker.name %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_weekday %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_date %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_time %></td>
        <td style="color:black;" class="text-center">Ikke afsluttet</td>
        <td style="color:black;" class="text-center">Ikke afsluttet</td>
        <td style="color:black;" class="text-center">Ikke afsluttet</td>
      </tr>
    </tbody>
    <% else %>
    <thead>
      <tr class="table-success">
        <th scope="col" style="color:black;" class="text-center">ID# <%= w.id %></th>
        <th scope="col" style="color:black;" class="text-center">NAVN</th>
        <th scope="col" style="color:black;" class="text-center">IND_DAG</th>
        <th scope="col" style="color:black;" class="text-center">IND_DATO</th>
        <th scope="col" style="color:black;" class="text-center">IND_TID</th>
        <th scope="col" style="color:black;" class="text-center">UD_DAG</th>
        <th scope="col" style="color:black;" class="text-center">UD_DATO</th>
        <th scope="col" style="color:black;" class="text-center">UD_TID</th>
      </tr>
    </thead>
    <tbody>
      <tr class="table-success">
        <th scope="row" style="color:black;" class="text-center">1</th>
        <td style="color:black;" class="text-center"><%= w.worker.name %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_weekday %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_date %></td>
        <td style="color:black;" class="text-center"><%= w.check_in_time %></td>
        <td style="color:black;" class="text-center"><%= w.check_out_weekday %></td>
        <td style="color:black;" class="text-center"><%= w.check_out_date %></td>
        <td style="color:black;" class="text-center"><%= w.check_out_time %></td>
      </tr>
    </tbody>
    <% end %>
    <%end%>
  </table>
  <% else %>
  <h4 class="text-center">Ingen vagter for valgte medarbejder</h4>
  <%end%>